<p class="pageHeader">New Manager</p>

<form action="/managers" method="post">
    <label for="firstName">First Name:</label>
    <input id="firstName" placeholder="First Name" class="inputbox" type="text" name="firstName" required="true">

    </input>

    <label for="lastName">Last Name:</label>
    <input id="lastName" class="inputbox" type="text" name="lastName" required="true">

    </input>

    <label for="salary">Salary:</label>
    <input id="salary" class="inputbox" type="number" name="salary" required="true">

    </input>

    <label for="department">Department</label>
    <select id="department" name="department">
        #foreach($department in $departments)
            <option value="$department.getId()">$department.getTitle()</option>
        #end
    </select>

    <label for="budget">Budget:</label>
    <input id="budget" class="inputbox" type="number" name="budget" required="true" step="any">

    </input>

    <input type="submit" value="Save" class="button">

    </input>



</form>